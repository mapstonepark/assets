<div id="account">
  <div class="container">
    <h1>Forgotten Password</h1>
    <p class="sub-hero-text">confirm username &amp; security answer</p>

    <form action="" method="post">
      <div class="form-feed">
        <label for="username">Username</label>
        <input type="text" placeholder="enter username" />
      </div>

      <div class="form-feed">
        <label for="password">Security question answer</label>
        <input
          type="password"
          placeholder="enter answer to security question"
        />
        <span class="error"></span>
      </div>

      <div class="form-feed">
        <button type="submit">Proceed</button>
      </div>
    </form>
    <div data-guide="sign-up">Back to <a href="/login">Login</a></div>
  </div>
  <%- include('./../../partials/account-footer'); %>
</div>
